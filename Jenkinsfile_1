pipeline {
	agent any
  tools {nodejs "node"}
	
	stages {
		
		stage('Cloning Git') {
			steps {
				git 'https://github.com/the1amit/node-todo-frontend.git'
      }
    }
	
		stage('Install dependencies') {
			steps {
				sh 'npm install'
			}
		}
	
		stage('Test') {
			steps {
				sh 'npm test'
			}
		}

		stage ('Archive Artifacts') {
			steps {
				archiveArtifacts artifacts: 'target/*.war'
			}
		}

		stage ('Notification'){
		emailext (
		      subject: "Job Completed",
		      body: "Jenkins Pipeline Job for Nodeks Build got completed !!!",
		      to: "the_amit@live.com"
		    )
	}
	
	}
}
